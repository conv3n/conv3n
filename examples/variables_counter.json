{
    "id": "variables-counter-example",
    "name": "Variables Counter Example",
    "nodes": {
        "init_counter": {
            "id": "init_counter",
            "type": "std/set_var",
            "position": {
                "x": 100,
                "y": 100
            },
            "config": {
                "name": "counter",
                "value": 0
            },
            "data": {
                "label": "Initialize Counter"
            }
        },
        "increment": {
            "id": "increment",
            "type": "std/set_var",
            "position": {
                "x": 350,
                "y": 100
            },
            "config": {
                "name": "counter",
                "value": "{{ $vars.counter + 1 }}"
            },
            "data": {
                "label": "Increment Counter"
            }
        },
        "check_limit": {
            "id": "check_limit",
            "type": "std/condition",
            "position": {
                "x": 600,
                "y": 100
            },
            "config": {
                "expression": "input.value < 5"
            },
            "data": {
                "label": "Check if < 5"
            }
        },
        "log_result": {
            "id": "log_result",
            "type": "custom/code",
            "position": {
                "x": 850,
                "y": 200
            },
            "config": {
                "code": "console.log('Counter reached:', input.config.counter); return { done: true };"
            },
            "data": {
                "label": "Log Result"
            }
        }
    },
    "edges": [
        {
            "id": "e1",
            "source": "init_counter",
            "target": "increment",
            "sourceHandle": "default",
            "targetHandle": "main"
        },
        {
            "id": "e2",
            "source": "increment",
            "target": "check_limit",
            "sourceHandle": "default",
            "targetHandle": "main"
        },
        {
            "id": "e3",
            "source": "check_limit",
            "target": "increment",
            "sourceHandle": "true",
            "targetHandle": "main"
        },
        {
            "id": "e4",
            "source": "check_limit",
            "target": "log_result",
            "sourceHandle": "false",
            "targetHandle": "main"
        }
    ]
}